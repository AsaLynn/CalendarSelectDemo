<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--日选择日历控件-->
    <declare-styleable name="calendarSelect">
        <attr name="select_type">
            <enum name="single" value="1" />
            <enum name="mult" value="2" />
        </attr>
        <attr name="locate_position">
            <enum name="none" value="-1" />
            <enum name="start" value="0" />
            <enum name="today" value="1" />
            <enum name="end" value="2" />
        </attr>
        <attr name="select_bg" format="reference" />
        <attr name="interval_select_bg" format="reference" />
        <attr name="interval_select_color" format="color" />
        <attr name="max_select_days" format="integer" />
        <attr name="weekend_color" format="color" />
    </declare-styleable>

    <!--周选择空间属性配置-->
    <declare-styleable name="TimeSelectView">
        <attr name="max_sections" format="integer" />
        <attr name="time_type">
            <enum name="week" value="1" />
            <enum name="month" value="2" />
        </attr>
    </declare-styleable>
</resources>

